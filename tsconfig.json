{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/auth-client": [
        "libs/auth-client/src"
      ],
      "@app/auth-client/*": [
        "libs/auth-client/src/*"
      ],
      "@app/project-management-client": [
        "libs/project-management-client/src"
      ],
      "@app/project-management-client/*": [
        "libs/project-management-client/src/*"
      ]
    }
  }
}